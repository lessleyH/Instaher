<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/backgrouns_flume" />

    <ImageView
        android:id="@+id/ivLikes"
        android:layout_width="39dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPost"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="39dp"
        android:layout_height="28dp"
        android:layout_below="@+id/ivPost"
        android:layout_toEndOf="@+id/ivLikes"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivDM"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_below="@+id/ivPost"
        android:layout_toEndOf="@+id/ivComment"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/direct" />

    <ImageView
        android:id="@+id/ivBook"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivPost"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLikes"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0 Views"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUsernameTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivPost"
        android:layout_marginBottom="-57dp"
        android:layout_toEndOf="@+id/ivLikes"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUsernameBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvViews"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="username"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivUserTop"
        android:layout_width="39dp"
        android:layout_height="31dp"
        android:layout_above="@+id/ivPost"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-57dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/instagram_user_outline_24" />

    <TextView
        android:id="@+id/tvDescriptions"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUsernameBottom"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivUserB"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDescriptions"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/instagram_user_outline_24" />

    <TextView
        android:id="@+id/tvAddComment"
        android:layout_width="226dp"
        android:layout_height="28dp"
        android:layout_below="@+id/tvDescriptions"
        android:layout_toEndOf="@+id/ivUserB"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Add a comment" />

    <ImageView
        android:id="@+id/ivExtraMenu"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_above="@+id/ivPost"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-57dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ufi_more" />

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivUserB"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0 mins ago"
        android:textSize="12sp" />

</RelativeLayout>